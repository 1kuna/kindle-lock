# Read-to-Unlock Configuration
# Copy this file to .env and fill in your values

# ============================================
# Amazon Credentials (for initial login only)
# ============================================
# Session is persisted in browser_profile after first login
AMAZON_EMAIL=your-email@example.com
AMAZON_PASSWORD=your-password

# ============================================
# API Settings
# ============================================
API_HOST=0.0.0.0
API_PORT=8080

# Security - generate with: openssl rand -hex 32
# Leave as default to disable auth (not recommended for production)
API_SECRET_KEY=change-me-in-production

# ============================================
# Reading Goal Settings
# ============================================
# Number of pages required to unlock apps each day
DAILY_PAGE_GOAL=30

# Hour when the daily counter resets (24-hour format, local time)
# Default 4 = 4:00 AM, so reading after midnight still counts for "today"
DAY_RESET_HOUR=4

# ============================================
# Scraper Settings
# ============================================
# How often to automatically scrape for new progress (minutes)
SCRAPE_INTERVAL_MINUTES=30

# Run browser in headless mode (set to false for initial login)
BROWSER_HEADLESS=true

# ============================================
# Database
# ============================================
# Path to SQLite database (relative to project root)
DATABASE_PATH=./data/reading.db

# Path to Playwright browser profile (relative to project root)
BROWSER_PROFILE_PATH=./data/browser_profile
